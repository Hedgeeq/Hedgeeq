    align-items: flex-end;
    padding: 0 20px;
  }
  #desk {
    position: relative;
    width: 300px;
    height: 120px;
    background: url('desk-image-placeholder.png') center/contain no-repeat;
    z-index: 1;
  }
  #bell {
    position: absolute;
    left: 50%;
    bottom: 10px;
    width: 40px;
    height: 40px;
    cursor: pointer;
    transform: translateX(-50%);
    z-index: 3;
  }
  #character {
    position: absolute;
    left: 20px;
    bottom: 130px;
    width: 120px;
    height: 140px;
    z-index: 2;
    opacity: 0;
    transition: opacity 0.5s ease;
  }
  #chatbox, #sidepanel {
    opacity: 0;
    transition: opacity 0.5s ease;
  }
  #chatbox {
    position: absolute;
    left: 160px;
    bottom: 90px;
