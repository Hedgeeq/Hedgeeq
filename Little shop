<body>

<div id="header">
  <div id="desk"></div>
  <img id="bell" src="bell-icon-placeholder.png" alt="Bell" title="Click me to talk" />
  <img id="character" src="character-idle.gif" alt="Character" />
  <button id="closeBtn" title="Close interaction">Ã—</button>

  <div id="chatbox">Welcome! Click a question to start.</div>
  <div id="sidepanel">
    <button class="question-btn">Who are you?</button>
    <button class="question-btn">What do you sell?</button>
    <button class="question-btn">How to buy?</button>
  </div>
</div>

<script>
  const bell = document.getElementById('bell');
  const character = document.getElementById('character');
  const chatbox = document.getElementById('chatbox');
  const sidepanel = document.getElementById('sidepanel');
  const closeBtn = document.getElementById('closeBtn');
  const questionButtons = document.querySelectorAll('.question-btn');

  function fadeIn(element) {
    element.style.opacity = '1';
  }
  function fadeOut(element) {
    element.style.opacity = '0';
  }

  // Initial state: hide character, chatbox, sidepanel, close button
  character.style.opacity = '0';
  chatbox.style.opacity = '0';
  sidepanel.style.opacity = '0';
  closeBtn.style.display = 'none';

  bell.addEventListener('click', () => {
    // Show interaction elements
    fadeIn(character);
    fadeIn(chatbox);
    fadeIn(sidepanel);
    closeBtn.style.display = 'block';
    bell.style.display = 'none';

    // Set character to popping up GIF then idle
    character.src = 'character-poppingup.gif';
    setTimeout(() => {
      character.src = 'character-idle.gif';
    }, 1000); // adjust duration to your GIF length
  });

  closeBtn.addEventListener('click', () => {
    // Hide interaction elements
    fadeOut(character);
    fadeOut(chatbox);
    fadeOut(sidepanel);
    closeBtn.style.display = 'none';
    bell.style.display = 'block';

    // Play going down animation, then idle hidden
    character.src = 'character-goingdown.gif';
    setTimeout(() => {
      character.style.opacity = '0';
      character.src = 'character-idle.gif'; // reset
    }, 1000);
  });

  // Chat interaction example
  questionButtons.forEach(btn => {
    btn.addEventListener('click', () => {
      character.src = 'character-talking.gif';
      chatbox.textContent = 'Typing...';
      let text = '';
      if (btn.textContent === 'Who are you?') {
        text = 'I am your friendly shop assistant!';
      } else if (btn.textContent === 'What do you sell?') {
        text = 'I sell awesome, handmade goods.';
      } else if (btn.textContent === 'How to buy?') {
        text = 'Click the purchase page to place an order.';
      }
      // Typewriter effect
      let i = 0;
      chatbox.textContent = '';
      const interval = setInterval(() => {
        chatbox.textContent += text.charAt(i);
        i++;
        if (i > text.length) {
          clearInterval(interval);
          character.src = 'character-idle.gif';
        }
      }, 40);
    });
  });
</script>

</body>
</html>
